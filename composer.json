{
    "name": "benjamincrozat/laravel-blade-sugar",
    "description": "Some useful sugar for your Laravel Blade templates to keep 'em DRY and clean.",
    "license": "WTFPL",
    "authors": [
        {
            "name": "Benjamin Crozat",
            "email": "benjamincrozat@me.com"
        }
    ],
    "keywords": [
        "blade",
        "directive",
        "laravel",
        "laravel-blade-sugar",
        "package",
        "sugar"
    ],
    "require": {
        "php" : "5.6.*|^7.0",
        "illuminate/contracts": "5.*",
        "illuminate/support": "5.*"
    },
    "require-dev": {
        "phpunit/phpunit": "5.*|6.*|7.*",
        "orchestra/testbench": "3.*"
    },
    "autoload": {
        "psr-4": {
            "BC\\Laravel\\BladeSugar\\": "src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "BC\\Laravel\\BladeSugar\\ServiceProvider"
            ]
        }
    }
}
