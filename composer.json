{
    "name": "benjamincrozat/laravel-blade-sugar",
    "description": "Add syntactic sugar to your templates.",
    "license": "WTFPL",
    "authors": [
        {
            "name": "Benjamin Crozat",
            "email": "benjamincrozat@me.com"
        }
    ],
    "keywords": [
        "blade",
        "directive",
        "laravel",
        "laravel-blade-sugar",
        "package",
        "sugar"
    ],
    "require": {
        "php" : "5.6.*|7.*",
        "illuminate/contracts": "^5.0|^6.0",
        "illuminate/support": "^5.0|^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.*|6.*",
        "orchestra/testbench": "3.*"
    },
    "autoload": {
        "psr-4": {
            "BC\\Laravel\\BladeSugar\\": "src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "BC\\Laravel\\BladeSugar\\ServiceProvider"
            ]
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
