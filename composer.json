{
    "name": "benjamincrozat/laravel-blade-sugar",
    "description": "Some useful sugar for your Laravel Blade templates to keep 'em DRY and clean.",
    "license": "WTFPL",
    "authors": [
        {
            "name": "Benjamin Crozat",
            "email": "benjamin@croz.at"
        }
    ],
    "keywords": [
        "blade",
        "directive",
        "laravel",
        "laravel-blade-sugar",
        "package",
        "sugar"
    ],
    "autoload": {
        "psr-4": {
            "BC\\Laravel\\BladeSugar\\": "src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "require": {
        "php" : "5.6|^7.0",
        "illuminate/support": "^5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "5.*",
        "orchestra/testbench": "3.1"
    }
}
