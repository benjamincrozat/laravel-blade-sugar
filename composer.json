{
    "name": "benjamincrozat/laravel-blade-sugar",
    "description": "Some useful sugar for your Laravel Blade templates to keep 'em DRY and clean.",
    "license": "WTFPL",
    "authors": [
        {
            "name": "Benjamin Crozat",
            "email": "benjamin@croz.at"
        }
    ],
    "keywords": [
        "blade",
        "directive",
        "laravel",
        "laravel-blade-sugar",
        "package",
        "sugar"
    ],
    "require": {
        "php" : "^7.1",
        "illuminate/contracts": "^5.4",
        "illuminate/support": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "orchestra/testbench": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "BC\\Laravel\\BladeSugar\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BC\\Laravel\\BladeSugar\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "BC\\Laravel\\BladeSugar\\ServiceProvider"
            ]
        }
    }
}
